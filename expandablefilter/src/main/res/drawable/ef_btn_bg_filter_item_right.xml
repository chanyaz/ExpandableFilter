<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true"> <!-- Selected -->
        <shape android:shape="rectangle">
            <solid android:color="@color/ef_background_color_active" />
            <corners android:bottomRightRadius="@dimen/ef_button_radius" android:topRightRadius="@dimen/ef_button_radius" />
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- Pressed -->
        <shape android:shape="rectangle">
            <solid android:color="@color/ef_background_color_active" />
            <corners android:bottomRightRadius="@dimen/ef_button_radius" android:topRightRadius="@dimen/ef_button_radius" />
        </shape>
    </item>
</selector>