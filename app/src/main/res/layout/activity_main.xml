<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="vertical"
    tools:context="com.farukcankaya.expandablefilterdemo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Foursquare like filter menu:"
        android:textColor="#c1c1c1"
        android:textSize="16sp" />

    <include layout="@layout/foursquare_filter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Circle filter example Closed / Opened"
        android:textColor="#c1c1c1"
        android:textSize="16sp" />

    <include layout="@layout/circle_filter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Rectangle filter example"
        android:textColor="#c1c1c1"
        android:textSize="16sp" />

    <include layout="@layout/rectangle_filter" />


</LinearLayout>