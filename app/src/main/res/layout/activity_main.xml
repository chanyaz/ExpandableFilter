<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="vertical"
    tools:context="com.farukcankaya.expandablefilterdemo.MainActivity">

    <com.farukcankaya.expandablefilter.ExpandableFilter
        android:id="@+id/expandableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:activeBackgroundColor="#315FDB"
        app:defaultBackgroundColor="#FFFFFF"
        app:defaultTextColor="#f00"
        app:emojiFont="Coin.ttf"
        app:itemDividerMargin="2dp"
        app:itemPadding="8dp"
        app:itemTextColor="@color/filter_text_color"
        app:labelFontSize="16sp" />
</LinearLayout>